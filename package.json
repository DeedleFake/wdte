{
	"name": "wdte-playground",
	"version": "0.1.0",
	"description": "WDTE Playground",
	"scripts": {
		"build": "run-s -l go:build react:build",
		"deploy": "gh-pages -d build",
		"clean": "rimraf build public/wdte.wasm",

		"go:build": "GO111MODULE=off GOOS=js GOARCH=wasm go build -v -o public/wdte.wasm ./go",

		"react:start": "BROWSER=none react-scripts start",
		"react:build": "react-scripts build",

		"prettier": "find src public -iname '*.js' -exec prettier --write {} +",

		"predeploy": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/DeedleFake/wdte.git"
	},
	"author": "DeedleFake",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/DeedleFake/wdte/issues"
	},
	"homepage": "https://deedlefake.github.io/wdte",
	"dependencies": {
		"brace": "^0.11.1",
		"clipboard": "^2.0.1",
		"jss-preset-default": "^4.5.0",
		"react": "^16.4.2",
		"react-ace": "^6.1.4",
		"react-dom": "^16.4.2",
		"react-jss": "^8.6.1",
		"react-markdown": "^3.4.1",
		"react-transition-group": "^2.4.0",
		"semantic-ui-css": "^2.3.3",
		"semantic-ui-react": "^0.82.2"
	},
	"devDependencies": {
		"gh-pages": "^1.2.0",
		"npm-run-all": "^4.1.3",
		"prettier": "^1.14.2",
		"react-scripts": "^1.1.4",
		"rimraf": "^2.6.2"
	},
	"prettier": {
		"arrowParens": "always",
		"parser": "flow",
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	}
}
